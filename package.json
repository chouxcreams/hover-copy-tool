{
  "name": "hover-copy-tool",
  "version": "1.0.0",
  "description": "Browser extension to extract and copy URL patterns on hover",
  "type": "module",
  "homepage": "https://chouxcreams.github.io/hover-copy-tool",
  "scripts": {
    "build": "tsx build.ts",
    "dev": "tsx build.ts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy-storybook": "npm run build-storybook && gh-pages -d storybook-static",
    "predeploy": "npm run build-storybook",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "keywords": [
    "browser-extension",
    "regex",
    "url-extraction",
    "chrome",
    "firefox"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/cli": "^7.6.0",
    "@storybook/react": "^7.6.0",
    "@storybook/react-vite": "^7.6.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/ui": "^3.2.3",
    "esbuild": "^0.25.5",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "storybook": "^7.6.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.3"
  }
}
